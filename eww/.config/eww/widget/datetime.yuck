(defvar rtime false)
(defwidget datetime [?icon]
    (button :onclick "notify-send hello " 
      (box :class "widget datetime" :orientation "horizontal" :halign "center" :space-evenly false
        (label :class "icon" :text icon)
        (label :class "value" :text date))))

(defpoll date :interval "10s"
  "LC_TIME=id_ID.UTF-8 date '+%A, %d %B %Y  /  %H:%M %Z'")
