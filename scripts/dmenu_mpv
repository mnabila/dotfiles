# Depends on        : mpvc

# Resource:
# mpvc: https://github.com/lwilletts/mpvc


DMENU="rofi -dmenu -i"
track=$(mpvc -i | tr "\t" "|" | $DMENU -p "ï¤Œ MPV" | cut -d "|" -f 1)
# track=$(mpvc -i | sed 's/\t\[\[7m/|/g' | $dmenu | cut -d "|" -f 1)
if [[ ! -z $track ]]; then
    mpvc -J $track
fi
