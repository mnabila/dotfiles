# add this to muttrc
# macro index,pager i0 "<shell-escape>bash $HOME/.config/mutt/bin/dmenu_mutt<enter><sync-mailbox><enter-command>source /tmp/neomutt-account<enter><change-folder>!<enter>;<check-stats>" "Switch Account"

DMENU="rofi -dmenu -i -p Neomutt"
ACCOUNTDIR="/home/$USER/.config/mutt/accounts"

account=$(ls ~/.config/mutt/accounts | sed -e "s/.muttrc//" | column -t -s "@" -O 1 -N ACCOUNT,PROVIDER | $DMENU -theme-str "window {width: 30%;}" -selected-row 1 | cut -d " " -f 1)
if [ -n "${account}" ]; then
    accountpath=$(find $ACCOUNTDIR -name "*$account*")
    if [ -f "$accountpath" ]; then
        cp -f "$accountpath" "/tmp/neomutt-account"
    fi
fi
