#!/bin/sh

# Usage:
# `record`: Ask for recording type via dmenu
# `record screencast`: Record both audio and screen
# `record video`: Record only screen
# `record audio`: Record only audio
# `record kill`: Kill existing recording
#
# If there is already a running instance, user will be prompted to end it.

# Required
# 1. ffmpeg

DMENU="dmenu -fn Iosevka-11 -nb #282828 -nf #ebdbb2 -sb #d79921 -w 800 -x 300 -y 220 -i -l 10"
OUTDIR="$HOME/Videos"

updateicon() {
    echo "$1" >~/.recordingicon
    pkill -RTMIN+9 i3blocks
}

killrecording() {
    if [[ -f ~/.recordingpid ]]; then
        recpid="$(cat ~/.recordingpid)"
        # kill with SIGTERM, allowing finishing touches.
        kill -9 "$recpid"
        rm -f ~/.recordingpid
        updateicon ""
        pkill -RTMIN+9 i3blocks
        # even after SIGTERM, ffmpeg may still run, so SIGKILL it.
        # sleep 3
        # kill -9 "$recpid"
        exit
    fi
}

screencast() {
    ffmpeg -y \
        -f x11grab \
        -framerate 60 \
        -s $(xdpyinfo | grep dimensions | awk '{print $2;}') \
        -i :0.0 \
        -f pulse -i 1 \
        -r 30 \
        -c:v libx264rgb -crf 0 -preset ultrafast -c:a flac \
        "$OUTDIR/screencast-$(date '+%y%m%d-%H%M-%S').mkv" &
    echo $! >~/.recordingpid
    updateicon "‚è∫Ô∏èüéôÔ∏è"
}

video() {
    ffmpeg \
        -f x11grab \
        -s $(xdpyinfo | grep dimensions | awk '{print $2;}') \
        -i :0.0 \
        -r 30 \
        -c:v libx264 \
        -pix_fmt yuv420p \
        -profile:v high \
        -crf 18 \
        -refs 1 \
        "$OUTDIR/video-$(date '+%y%m%d-%H%M-%S').mkv" &
    echo $! >~/.recordingpid
    updateicon "‚è∫Ô∏è"
}

webcamhidef() {
    ffmpeg \
        -f v412 \
        -i /dev/video0 \
        -video_size 1920x1080 \
        "$OUTDIR/webcam-$(date '+%y%m%d-%H%M-%S').mkv" &
    echo $! >~/.recordingpid
    updateicon "üé•"
}

webcam() {
    ffmpeg \
        -f v412 \
        -i /dev/video0 \
        -video_size 640x480 \
        "$OUTDIR/webcam-$(date '+%y%m%d-%H%M-%S').mkv" &
    echo $! >~/.recordingpid
    updateicon "üé•"
}

audio() {
    ffmpeg \
        -f alsa -i default \
        -c:a flac \
        "$OUTDIR/audio-$(date '+%y%m%d-%H%M-%S').flac" &
    echo $! >~/.recordingpid
    updateicon "üéôÔ∏è"
}

askrecording() {
    [ -f ~/.recordingpid ] && asktoend && exit
    choice=$(printf "screencast\\nvideo\\naudio\\nwebcam\\nwebcam (hi-def)" | $DMENU -p "Select recording style:")
    case "$choice" in
    screencast) screencast ;;
    audio) audio ;;
    video) video ;;
    webcam) webcamrecord ;;
    "webcam (hi-def)") webcamrecord ;;
    esac
}

asktoend() {
    response=$(printf "No\\nYes" | $DMENU -p "Recording still active. End recording?") &&
        [ "$response" = "Yes" ] && killrecording
}

case "$1" in
screencast) screencast ;;
audio) audio ;;
video) video ;;
kill) killrecording ;;
*) askrecording ;;
esac
