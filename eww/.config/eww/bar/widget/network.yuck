(defwidget network []
  (eventbox :onhover "eww open popup-network" :onhoverlost "eww close popup-network"
    (box :class "widget network" :orientation "h" :halign "start" :space-evenly false
      (label :class "icon" :text "ï‡«")
      (label :class "value" :text ssid)
    )
  )
)

(defpoll ssid :interval "2s"
  "nmcli device show wlan0 | grep CONNECTION | cut -d : -f 2 | xargs")

